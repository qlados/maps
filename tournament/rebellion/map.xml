<spawns>
    <default kit="obsKit" region="spawn-obs" yaw="0"/>
    <spawn team="red"  kit="red-kit"  region="spawn-red"  yaw="90"/>
    <spawn team="blue" kit="blue-kit" region="spawn-blue" yaw="-90"/>
</spawns>
