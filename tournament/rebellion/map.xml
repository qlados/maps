    <respawn delay="3s" auto="true" blackout="true" filter="spawn-1"/>
    <respawn delay="3.5s" auto="true" blackout="true" filter="spawn-2"/>
    <respawn delay="4s" auto="true" blackout="true" filter="spawn-3"/>
